
//- Defines a reusable search form.
mixin searchForm(title, id, action)
    form(id='#{id}', action='#{action}')
        .append.field
            input.wide.text.input(type='text', placeholder='#{title}')
            .medium.primary.btn
                input(type='submit', value='Go')

script#templateSearchFields(type='text/x-handlebars-template')
    .row
        .six.columns.text-right
            img(src='images/brickBuilder.jpg')
        .six.columns.text-right
            h1
            p Search for one phrase in the fields: short description, description, notes, and author. When searching for a part name, use the short version (e.g. B0010). Â 
            +searchForm("Text Search", "form-text-search", "#")
            p Search for parts with names following this part. Enter a part name such as BBa_K123456 and the software will find up to 1000 parts with a name like BBa_K123xxx where the part name is equal to or beyond BBa_K123456. (The BBa_ is optional as usual.)
            +searchForm("1000 Parts Search", "form-thousand-search", "#")
            p Search for parts that match a portion of this part or this sequence of parts.
            +searchForm("Subparts Search", "form-subpart-search", "#")
            p Search for parts that contain these parts.
            +searchForm("Superparts Search", "form-superpart-search", "#")
            p Enter an individual part
            .append.field
                input.wide.input#brickName(type='text', placeholder='Brick Name')
                .medium.primary.btn(onclick="Bricklayer.manualAdd()")
                    input(type='submit', value='Add') Add