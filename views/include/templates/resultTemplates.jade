script#templateResultsRow(type='text/x-handlebars-template')
    tr(data-part='{{name}}')
        td
            a.text-large.part-header(class='toggle-{{name}}', href='#')
                i.icon-right-open.resultIcon
                | {{name}}
        td
            span.label(class='{{type}}') {{type}}
        td
            span {{length}} bp
        td
            span
                {{#each compatibility}}
                span(class='rfc-{{this}}') {{@key}}
                {{/each}}
        td
            span
                i.icon-star
                | {{stars}}
                i.icon-heart
                | {{rating}}/5
        td.text-right
            {{#if inBin}}
            a.text-large(id='toggle-bin-{{name}}', href='#', onclick="Bricklayer.bin.removeBrick('{{name}}', this)") remove
            {{else}}
            a.text-large(id='toggle-bin-{{name}}', href='#', onclick="Bricklayer.bin.addBrick('{{name}}', this)") add
            {{/if}}
    tr.partExtended(class='toggle-{{name}}')
        td(colspan='6')
            p.description
                | Description: {{description}}
            p.remarks
                | Availability: 
                a.red(href='{{partUrl}}') {{availability}}
                br
                | Submitted: {{dateEntered}}
                //br
                //| -
                //span.green {{works}}
                //| -
                //| {{numUses}} uses

script#templateSearchResults(type='text/x-handlebars-template')
    .row
        h2.search-title search: {{searchTerm}}
    //- Search info bar
    .row
        .six.columns
            | {{numResults}} results
    //- Search results
    .row
        table#searchResultsTable
            //- Sorting columns
            thead
                td(style='width: 25%;') Part ID
                td(style='width: 20%;') Type
                td(style='width: 15%;') Length
                td(style='width: 20%;') Assembly
                td(style='width: 15%;') Reviews
                td(style='width: 5%;')
            //- Part
            tbody#results
            //- Important! This row prevents odd layout changes when parts are shown.
            tfoot
                tr
                    td(colspan='6', style='width: 100%; height: 1px; padding: 0px;')
    .row
        div.text-center
            {{#if prevOffset}}
            div(class='medium btn pill-left info')
                a(href='#', onclick="Bricklayer.paginateTable({{prevOffset}})") 
                    i.icon-left-bold
            {{/if}}
            {{#if nextOffset}}
            div(class='medium btn pill-right info')
                a(href='#', onclick="Bricklayer.paginateTable({{nextOffset}})") 
                    i.icon-right-bold
            {{/if}}